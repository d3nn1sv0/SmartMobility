<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SmartMobilityApp.ViewModels"
             xmlns:models="clr-namespace:SmartMobilityApp.Models"
             x:Class="SmartMobilityApp.Views.PassengerPage"
             x:DataType="viewmodels:PassengerViewModel"
             Title="Buspositioner">

    <Shell.TitleView>
        <Grid ColumnDefinitions="*,Auto" Padding="0,0,10,0">
            <Label Text="Buspositioner"
                   FontSize="18"
                   FontAttributes="Bold"
                   VerticalOptions="Center" />
            <Button Text="Log ud"
                    Grid.Column="1"
                    Command="{Binding LogoutCommand}"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Primary}"
                    FontSize="14" />
        </Grid>
    </Shell.TitleView>

    <Grid RowDefinitions="Auto,*">

        <VerticalStackLayout Grid.Row="0" Padding="15" BackgroundColor="{StaticResource Primary}">
            <Label Text="{Binding UserName, StringFormat='Velkommen, {0}'}"
                   TextColor="White"
                   FontSize="16" />
        </VerticalStackLayout>

        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">

            <CollectionView ItemsSource="{Binding BusPositions}"
                            EmptyView="Ingen busser fundet. TrÃ¦k ned for at opdatere.">

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:BusLocationDto">
                        <Frame Margin="10,5" Padding="15" CornerRadius="10" BorderColor="LightGray">
                            <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto">

                                <Frame Grid.RowSpan="2"
                                       BackgroundColor="{StaticResource Primary}"
                                       CornerRadius="25"
                                       WidthRequest="50"
                                       HeightRequest="50"
                                       Padding="0"
                                       VerticalOptions="Center">
                                    <Label Text="ðŸšŒ"
                                           FontSize="24"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center" />
                                </Frame>

                                <VerticalStackLayout Grid.Column="1" Margin="15,0,0,0">
                                    <Label Text="{Binding BusNumber, StringFormat='Bus {0}'}"
                                           FontSize="18"
                                           FontAttributes="Bold" />
                                    <Label Text="{Binding RouteName}"
                                           FontSize="14"
                                           TextColor="Gray" />
                                </VerticalStackLayout>

                                <VerticalStackLayout Grid.Column="2" Grid.RowSpan="2"
                                                     VerticalOptions="Center"
                                                     HorizontalOptions="End">
                                    <Label Text="{Binding Speed, StringFormat='{0:F0} km/t'}"
                                           FontSize="14"
                                           HorizontalOptions="End" />
                                    <Label Text="{Binding Timestamp, StringFormat='{0:HH:mm:ss}'}"
                                           FontSize="12"
                                           TextColor="Gray"
                                           HorizontalOptions="End" />
                                </VerticalStackLayout>

                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
        </RefreshView>

        <Label Grid.Row="1"
               Text="{Binding ErrorMessage}"
               TextColor="Red"
               IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotNullOrEmptyConverter}}"
               HorizontalOptions="Center"
               VerticalOptions="End"
               Margin="0,0,0,20" />

    </Grid>
</ContentPage>

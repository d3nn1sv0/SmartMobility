<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SmartMobilityApp.ViewModels"
             xmlns:models="clr-namespace:SmartMobilityApp.Models.Dtos"
             x:Class="SmartMobilityApp.Views.PassengerPage"
             x:DataType="viewmodels:PassengerViewModel"
             Title="Ruter">

    <Shell.TitleView>
        <Grid ColumnDefinitions="*,Auto" Padding="0,0,10,0">
            <Label Text="VÃ¦lg Rute"
                   FontSize="18"
                   FontAttributes="Bold"
                   VerticalOptions="Center" />
            <Button Text="Log ud"
                    Grid.Column="1"
                    Command="{Binding LogoutCommand}"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Primary}"
                    FontSize="14" />
        </Grid>
    </Shell.TitleView>

    <Grid RowDefinitions="Auto,Auto,Auto,*">

        <VerticalStackLayout Grid.Row="0" Padding="15" BackgroundColor="{StaticResource Primary}">
            <Label Text="{Binding UserName, StringFormat='Velkommen, {0}'}"
                   TextColor="White"
                   FontSize="16" />
        </VerticalStackLayout>

        <SearchBar Grid.Row="1"
                   Placeholder="SÃ¸g ruter..."
                   Text="{Binding SearchText}"
                   Margin="10,10,10,0" />

        <Frame Grid.Row="2"
               IsVisible="{Binding LatestNotification, Converter={StaticResource StringNotNullOrEmptyConverter}}"
               BackgroundColor="#E3F2FD"
               Padding="15"
               Margin="10,10,10,0"
               CornerRadius="8"
               BorderColor="#1565C0">
            <Grid ColumnDefinitions="Auto,*">
                <Label Text="ðŸ””"
                       FontSize="20"
                       VerticalOptions="Center" />
                <Label Grid.Column="1"
                       Text="{Binding LatestNotification}"
                       TextColor="#1565C0"
                       FontSize="14"
                       VerticalOptions="Center"
                       Margin="10,0,0,0" />
            </Grid>
        </Frame>

        <RefreshView Grid.Row="3"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">

            <CollectionView x:Name="RouteCollection"
                            ItemsSource="{Binding Routes}"
                            EmptyView="Ingen ruter matcher din sÃ¸gning.">

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:RouteDto">
                        <Frame Margin="10,5" Padding="15" CornerRadius="10" BorderColor="LightGray">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={x:Reference RouteCollection}, Path=BindingContext.SelectRouteCommand}"
                                    CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>
                            <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto">

                                <Frame Grid.RowSpan="2"
                                       BackgroundColor="{StaticResource Primary}"
                                       CornerRadius="25"
                                       WidthRequest="50"
                                       HeightRequest="50"
                                       Padding="0"
                                       VerticalOptions="Center">
                                    <Label Text="{Binding RouteNumber}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="White"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center" />
                                </Frame>

                                <VerticalStackLayout Grid.Column="1" Margin="15,0,0,0">
                                    <Label Text="{Binding Name}"
                                           FontSize="18"
                                           FontAttributes="Bold" />
                                    <Label Text="{Binding Description}"
                                           FontSize="14"
                                           TextColor="Gray" />
                                </VerticalStackLayout>

                                <Label Grid.Column="2" Grid.RowSpan="2"
                                       Text="â†’"
                                       FontSize="24"
                                       TextColor="{StaticResource Primary}"
                                       VerticalOptions="Center"
                                       HorizontalOptions="End" />

                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
        </RefreshView>

        <Label Grid.Row="3"
               Text="{Binding ErrorMessage}"
               TextColor="Red"
               IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotNullOrEmptyConverter}}"
               HorizontalOptions="Center"
               VerticalOptions="End"
               Margin="0,0,0,20" />

    </Grid>
</ContentPage>

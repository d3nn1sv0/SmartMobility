<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SmartMobilityApp.ViewModels"
             x:Class="SmartMobilityApp.Views.RegisterPage"
             x:DataType="viewmodels:RegisterViewModel"
             Title="Opret konto"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">

            <Label Text="Smart Mobility"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource Primary}" />

            <Label Text="Opret en ny konto"
                   FontSize="16"
                   HorizontalOptions="Center"
                   TextColor="Gray" />

            <VerticalStackLayout Spacing="5">
                <Label Text="Navn (valgfrit)" FontSize="14" />
                <Entry Text="{Binding Name}"
                       Placeholder="Dit navn" />
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="5">
                <Label Text="Email" FontSize="14" />
                <Entry Text="{Binding Email}"
                       Placeholder="din@email.dk"
                       Keyboard="Email" />
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="5">
                <Label Text="Adgangskode" FontSize="14" />
                <Entry Text="{Binding Password}"
                       Placeholder="Mindst 6 tegn"
                       IsPassword="True" />
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="5">
                <Label Text="BekrÃ¦ft adgangskode" FontSize="14" />
                <Entry Text="{Binding ConfirmPassword}"
                       Placeholder="Gentag adgangskode"
                       IsPassword="True" />
            </VerticalStackLayout>

            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotNullOrEmptyConverter}}"
                   HorizontalOptions="Center" />

            <Button Text="Opret konto"
                    Command="{Binding RegisterCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
                    HeightRequest="50" />

            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}"
                               HorizontalOptions="Center" />

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                <Label Text="Har du allerede en konto?"
                       VerticalOptions="Center"
                       TextColor="Gray" />
                <Button Text="Log ind"
                        Command="{Binding GoToLoginCommand}"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource Primary}"
                        Padding="0" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
